{
  "name": "Empire Builder - Strategic Conquest Game",
  "description": "A comprehensive web-based empire building strategy game with real-time combat, cities, and resource management.",
  "repository": "https://github.com/yourusername/empire-builder-game",
  "logo": "https://via.placeholder.com/120x120/2c3e50/ffffff?text=EB",
  "keywords": ["python", "flask", "game", "strategy", "real-time", "multiplayer"],
  "image": "heroku/python",
  "stack": "heroku-22",
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "SECRET_KEY": {
      "description": "A secret key for Flask sessions",
      "generator": "secret"
    },
    "FLASK_ENV": {
      "description": "Flask environment",
      "value": "production"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini",
      "as": "DATABASE"
    }
  ],
  "scripts": {
    "postdeploy": "echo 'Empire Builder deployed successfully!'"
  },
  "success_url": "/",
  "website": "https://github.com/yourusername/empire-builder-game"
}